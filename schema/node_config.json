{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/hyperjs-node-config.schema.json",
  "title": "HyperJS Node Config Schema",
  "type": "object",
  "properties": {
    "configVersion": {
      "type": "string"
    },
    "outgoing": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "array",
            "items": { "type": "string" }
          },
          "relation": {
            "type": "array",
            "items": { "type": "string" }
          },
          "required": {
            "type": "boolean"
          },
          "multiplicity": {
            "type": "string",
            "enum": ["1", "many", "0..1", "1..*", "exact:n"]
          },
          "autoCreate": {
            "type": "boolean"
          }
        },
        "required": ["type", "relation"]
      }
    },
    "incoming": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "array",
            "items": { "type": "string" }
          },
          "relation": {
            "type": "array",
            "items": { "type": "string" }
          },
          "required": {
            "type": "boolean"
          },
          "multiplicity": {
            "type": "string",
            "enum": ["1", "many", "0..1", "1..*", "exact:n"]
          }
        },
        "required": ["type", "relation"]
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "default": {}
        },
        "required": ["type"]
      }
    },
    "isMetadataStrict": {
      "type": "boolean"
    }
  },
  "required": ["configVersion", "outgoing", "incoming"]
}